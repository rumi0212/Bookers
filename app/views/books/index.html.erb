<h1>
    <strong>Books</strong>
</h1>

 <table>
   <thead>
     <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan = "3"></th>
     </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    </tbody>
</table>

<% end %>